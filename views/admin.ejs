<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .status-Pendente { background-color: #fca5a5; }
        .status-Resolvido { background-color: #a7f3d0; }
        .modal {
            display: none;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            width: 90%;
            max-width: 600px;
            position: relative;
            /* Adicionado para permitir que a altura se ajuste ao conteúdo */
            max-height: 90vh; /* Limite a altura máxima do modal para evitar que ele saia da tela */
            overflow-y: auto; /* Adiciona scroll ao modal inteiro se o conteúdo for muito grande */
        }
    </style>
</head>
<body class="bg-gray-100 p-4 md:p-8">

    <div class="max-w-7xl mx-auto bg-white rounded-lg shadow-xl p-6 md:p-8">
        <header class="flex flex-col md:flex-row justify-between items-center mb-6 md:mb-8 border-b pb-4">
            <h1 class="text-3xl font-bold text-gray-800">Painel Administrativo</h1>
            <div class="flex flex-col sm:flex-row items-center gap-4 mt-4 md:mt-0">
                <a href="/register-admin" class="w-full sm:w-auto px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-150 ease-in-out text-center">Cadastrar novo administrador</a>
                <a href="/logout" class="w-full sm:w-auto px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition duration-150 ease-in-out text-center">Sair</a>
            </div>
        </header>

        <!-- Lógica para exibir a mensagem -->
        <% if (message) { %>
            <div class="px-4 py-3 rounded relative mb-4 <%= message.type === 'success' ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700' %>" role="alert">
                <span class="block sm:inline"><%= message.text %></span>
            </div>
        <% } %>

        <main>
            <h2 class="text-xl font-semibold text-gray-700 mb-4">Denúncias Recebidas</h2>
            <% if (denuncias.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrição</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Anexo</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="denuncias-tabela" class="bg-white divide-y divide-gray-200">
                        <% denuncias.forEach(denuncia => { %>
                        <tr class="<%= 'status-' + denuncia.status %> cursor-pointer hover:bg-gray-50"
                            data-id="<%= denuncia.id %>"
                            data-tipo="<%= denuncia.tipo %>"
                            data-status="<%= denuncia.status %>"
                            data-descricao="<%= denuncia.descricao %>"
                            data-anexo-original="<%= denuncia.anexo_nome_original || '' %>"
                            data-anexo-salvo="<%= denuncia.anexo_nome_salvo || '' %>"
                            data-data="<%= denuncia.data_envio %>"
                            data-identificacao="<%= denuncia.identificacao ? 'true' : 'false' %>"
                            data-nome="<%= denuncia.nome || '' %>"
                            data-telefone="<%= denuncia.telefone || '' %>"
                            data-email="<%= denuncia.email || '' %>">
                            <td class="px-6 py-4 whitespace-nowrap"><%= denuncia.id %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= denuncia.tipo %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= denuncia.status %></td>
                            <td class="px-6 py-4 truncate max-w-sm"><%= denuncia.descricao %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (denuncia.anexo_nome_original) { %>
                                <a href="/admin/anexo/<%= denuncia.anexo_nome_salvo %>" class="text-blue-600 hover:text-blue-900" download onclick="event.stopPropagation()">
                                    <%= denuncia.anexo_nome_original %>
                                </a>
                                <% } else { %>
                                Nenhum
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= new Date(denuncia.data_envio).toLocaleDateString() %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <form action="/admin/marcar/<%= denuncia.id %>/<%= denuncia.status === 'Pendente' ? 'resolvido' : 'pendente' %>" method="POST" class="inline-block" onclick="event.stopPropagation()">
                                    <button type="submit" class="px-2 py-1 text-sm rounded-md <%= denuncia.status === 'Pendente' ? 'bg-green-500 text-white hover:bg-green-600' : 'bg-yellow-500 text-white hover:bg-yellow-600' %>">
                                        <%= denuncia.status === 'Pendente' ? 'Resolver' : 'Reabrir' %>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <p class="text-gray-500">Nenhuma denúncia encontrada.</p>
            <% } %>
        </main>
    </div>

    <!-- Modal para exibir os detalhes da denúncia -->
    <div id="denunciaModal" class="modal">
        <div class="modal-content">
            <span class="absolute top-4 right-4 text-gray-500 text-2xl font-bold cursor-pointer" onclick="closeDenunciaModal()">&times;</span>
            <h3 class="text-2xl font-semibold mb-4">Detalhes da Denúncia</h3>
            <div class="space-y-4">
                <p><strong>ID:</strong> <span id="modal-id"></span></p>
                <p><strong>Tipo:</strong> <span id="modal-tipo"></span></p>
                <p><strong>Status:</strong> <span id="modal-status"></span></p>
                <!-- Adicionado a classe break-words para quebrar palavras longas -->
                <p><strong>Descrição:</strong> <span id="modal-descricao" class="block mt-1 p-2 bg-gray-100 rounded-md break-words" style="white-space: pre-wrap;"></span></p>
                <p><strong>Anexo:</strong> <span id="modal-anexo"></span></p>
                <p><strong>Data:</strong> <span id="modal-data"></span></p>
                <div id="modal-identificacao">
                    <p><strong>Nome:</strong> <span id="modal-nome"></span></p>
                    <p><strong>Telefone:</strong> <span id="modal-telefone"></span></p>
                    <p><strong>Email:</strong> <span id="modal-email"></span></p>
                </div>
            </div>
            <div class="mt-6 text-right">
                <button onclick="closeDenunciaModal()" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 transition duration-150 ease-in-out">Fechar</button>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('denuncias-tabela').addEventListener('click', function(event) {
            const row = event.target.closest('tr');
            if (row) {
                const denuncia = {
                    id: row.dataset.id,
                    tipo: row.dataset.tipo,
                    status: row.dataset.status,
                    descricao: row.dataset.descricao,
                    anexo_nome_original: row.dataset.anexoOriginal,
                    anexo_nome_salvo: row.dataset.anexoSalvo,
                    data_envio: row.dataset.data,
                    identificacao: row.dataset.identificacao === 'true',
                    nome: row.dataset.nome,
                    telefone: row.dataset.telefone,
                    email: row.dataset.email
                };
                showDenunciaModal(denuncia);
            }
        });

        function showDenunciaModal(denuncia) {
            const modal = document.getElementById('denunciaModal');
            
            document.getElementById('modal-id').textContent = denuncia.id;
            document.getElementById('modal-tipo').textContent = denuncia.tipo;
            document.getElementById('modal-status').textContent = denuncia.status;
            document.getElementById('modal-descricao').textContent = denuncia.descricao;
            
            if (denuncia.data_envio) {
                document.getElementById('modal-data').textContent = new Date(denuncia.data_envio).toLocaleDateString();
            } else {
                document.getElementById('modal-data').textContent = 'Data não disponível';
            }


            const anexoSpan = document.getElementById('modal-anexo');
            if (denuncia.anexo_nome_original) {
                anexoSpan.innerHTML = `<a href="/admin/anexo/${denuncia.anexo_nome_salvo}" class="text-blue-600 hover:text-blue-900" download>${denuncia.anexo_nome_original}</a>`;
            } else {
                anexoSpan.textContent = 'Nenhum';
            }

            const identificacaoDiv = document.getElementById('modal-identificacao');
            if (denuncia.identificacao) {
                identificacaoDiv.style.display = 'block';
                document.getElementById('modal-nome').textContent = denuncia.nome || 'Não informado';
                document.getElementById('modal-telefone').textContent = denuncia.telefone || 'Não informado';
                document.getElementById('modal-email').textContent = denuncia.email || 'Não informado';
            } else {
                identificacaoDiv.style.display = 'none';
            }

            modal.style.display = 'flex';
        }

        // Função para fechar o modal
        function closeDenunciaModal() {
            const modal = document.getElementById('denunciaModal');
            modal.style.display = 'none';
        }

        // Fecha o modal se o usuário clicar fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('denunciaModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }
    </script>
</body>
</html>
